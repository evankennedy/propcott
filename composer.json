{
	"name": "propcott/propcott",
	"description": "Reinventing Boycotts",
	"keywords": ["framework", "laravel"],
	"type": "project",
	"require": {
		"php": ">=5.4.0",
		"laravel/framework": "5.0.*",
		"laravel/socialite": "2.0.4",
        "react/react": "0.4.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"fzaninotto/faker": "1.6.x-dev"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/",
			"Laravact\\": "laravact/src/",
			"LaravelReactPHP\\": "laravel-reactphp/src/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
